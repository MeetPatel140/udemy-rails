<h1 class="display-4 text-center mt-4">SHOW PAGE</h1>

<div class="card mt-4">
  <div class="card-body">
    <p class="card-text"><strong>Title: </strong><%= @article.title %></p>
    <p class="card-text"><strong>Description: </strong><%= @article.description %></p>

    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %> 
    <%= link_to 'Back', articles_path, class: 'btn btn-secondary' %> 
    <%= link_to 'Delete', article_path(@article), method: :delete, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-danger' %>
  </div>
</div>