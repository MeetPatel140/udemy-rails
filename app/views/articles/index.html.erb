<div class="d-flex justify-content-between align-items-center mt-4">
  <h1 class="text-center mt-3">Articles Listing Page</h1>
  <button class="btn btn-success"> 
    <i class="fa-solid fa-plus"></i>
    <%= link_to 'New', new_article_path, class: "text-white" %>
  </button>
</div>
<d class="row">
<% @articles.reverse_each do |article| %>
  <div class="col-6">
    <div class="card text-center mt-5 shadow-lg">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title m-0"><i class="fa fa-user bg-white p-2 rounded-circle"></i> <%= article.user.username %></h5>
        <div>
          <button class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i> <%= link_to 'View', article_path(article), class: "text-white" %></button>
          <button class="btn btn-sm btn-secondary"><i class="fa-solid fa-pen-to-square"></i> <%= link_to 'Edit', edit_article_path(article), class: "text-white" %></button>
          <button class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i> <%= link_to 'Delete', article_path(article), data: {turbo_method: :delete }, class: "text-white" %></button>
        </div>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.description %></p>
      </div>
      <div class="card-footer text-muted d-flex align-items-center justify-content-between">
        <p class="card-text m-0" style="font-size: 12px;">Created on: <%= article.created_at.strftime('%d-%m-%Y') %> </p>
        <p class="card-text m-0" style="font-size: 12px;">Updated on: <%= time_ago_in_words(article.updated_at) %> ago</p>        
      </div>      
    </div>
  </div>
  <% end %>
</div>
        
        
  