<h1 class="text-center mt-4">Categories</h1>
<div class="container">
<div class="row mb-5">
    <% @categories.each do |category| %>
      <div class="col-6">
        <div class="card text-center mt-5 shadow-lg">
          <div class="card-header d-flex justify-content-between align-items-center">
            <div>
              <%= link_to category.name, category_path(category) %>
            </div>
          </div>
          <div class="card-footer text-muted d-flex align-items-center justify-content-between">
            <p class="card-text m-0" style="font-size: 12px;">Created on: <%= category.created_at.strftime('%d-%m-%Y') %> </p>
            <p class="card-text m-0" style="font-size: 12px;">Updated on: <%= time_ago_in_words(category.updated_at) %> ago</p>        
          </div>      
        </div>
      </div>
      <% end %>
</div>
</div>
<div class="flickr_pagination mt-5 mb-5">
    <%= will_paginate @categories, :container => false %>
</div>