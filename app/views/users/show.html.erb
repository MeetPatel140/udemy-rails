<h1 class="text-center"><%= @user.username %>'s Profile</h1>
<div class="container">
    <%= gravatar_for @user, size: 200 %>
    <div class="text-center mt-4 mb-4">
    <% if logged_in? && @user == current_user %>    
        <%= link_to "Edit Your Profile", edit_user_path(@user), class: "btn btn-primary" %>
        <%= link_to "Log out", logout_path, class: "btn btn-primary somecss", method: :delete %>
    <% end %> 
    </div>
    <h3 class="text-center">Articles</h3>
    <%= render "articles/articles" %>
</div>



