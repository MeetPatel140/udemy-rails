<section class="mt-5 mb-5 jumbotron1" style="background-color: #ffffff; height: 100% !important">
    <%= render 'articles/errors', obj: @user %>
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <%= form_with(model: @user) do |f| %>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw jumbotron1"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label :username, class: "form-label jumbotron1" %>
                        <%= f.text_field :username, id: "form3Example1c", class: "form-control jumbotron1", placeholder: "Enter a username" %>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw jumbotron1"></i>
                      <div class="form-outline flex-fill mb-0">
                          <%= f.label :email, class: "form-label jumbotron1" %>
                        <%= f.email_field :email, id: "form3Example3c", class: "form-control jumbotron1", placeholder: "Enter your email address" %>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw jumbotron1"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label :password, class: "form-label jumbotron1" %>
                        <%= f.password_field :password, id: "form3Example4c", class: "form-control jumbotron1", placeholder: "Choose a password" %>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= f.submit  class: "btn btn-primary btn-lg jumbotron1" %>
                    </div>
                  <% end %>
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid jumbotron1" alt="Sample image jumbotron1">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  